{
  "include": [
    "NetscriptDefinitions.d.ts",
    "global.d.ts",
    "src/**/*",
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "/*": [
        "*"
      ],
      "@ns": [
        "../NetscriptDefinitions.d.ts"
      ]
    }
  }
}
